{% extends 'base.html.twig' %}

{% block body %}

<div class="content">
<div class="container">
<div class="row">
    <div class="col">
    <h2>Paiement de votre réservation du [$dateResa]</h2>
    </div>
</div>
<form method="post" id="payment-form">
  <div class="row">
  <div class="col-3">
    <label for="card-element">
      Carte de crédit
    </label>
    </div>
    <div class="col-6">
    <div id="card-element">
      <!-- A Stripe Element will be inserted here. -->
    </div>
    </div>
  </div>
    <!-- Used to display form errors. -->
    <div id="card-errors" role="alert"></div>

  <button>Payer $montantResa</button>
</form>
</div>
</div>
</div>
{% endblock %}

