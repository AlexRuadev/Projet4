{% extends 'base.html.twig' %}

{% block body %}

    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="titre-form-largeur">
                        <h2>Paiement de votre réservation du $dateResa</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    {#                    <div class="form-largeur">#}
                    <div class="form-group">
                        <form method="post" id="payment-form">
                            <div class="row paiement-largeur">
                                <div class="col-3">
                                    <label for="card-element">
                                        Carte de crédit
                                    </label>
                                </div>
                                <div class="col-9">
                                    <div class="form-control" id="card-element">
                                        <!-- A Stripe Element will be inserted here. -->
                                    </div>
                                </div>
                                <!-- Used to display form errors. -->
                                <div id="card-errors" role="alert"></div>
                                <div class="col">
                                    <button type="submit" class="btn button bouton-form">Payer $montantResa</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </div>
    </div>
{% endblock %}

