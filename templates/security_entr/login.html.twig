{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="titre-form-largeur">
                        <h2>Connexion</h2>
                    </div>
                </div>
            </div>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'securityentr') }}</div>
            {% endif %}

            <div class="row">
                <div class="col">
                    <div class="form-largeur">
                        <form method="post">
                            <div class="form-group">
                                <label for="inputEntreprises_pseudo" class="sr-only"> Entreprises_pseudo</label>
                                <input type="text" value="{{ last_username }}" name="Entreprises_pseudo" id="inputEntreprises_pseudo" class="form-control" placeholder="Votre pseudo" required autofocus>
                            </div>
                            <div class="form-group">
                                <label for="inputEntreprisesPassword" class="sr-only">Password</label>
                                <input type="password" name="Entreprises_mdp" id="inputEntreprisesPassword" class="form-control" placeholder="Mot de passe" required>
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                            </div>
                            <div class="form-group">
                                <button class="btn button bouton-form" type="submit">
                                    Me connecter
                                </button>
                            </div>
                            <a href="{{ path('app_registerentr') }}" class="conditions-g pull-right">Vous n'Ãªtes pas encore inscrit?</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>







